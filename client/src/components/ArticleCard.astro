---
interface Props {
  title: string;
  description?: string;
  href: string;
  thumbnailUrl?: string;
  titleClass?: string;
  descriptionClass?: string;
  mostRecentClass?: string;
}

const {
  title,
  description,
  href,
  thumbnailUrl,
  titleClass,
  descriptionClass,
  mostRecentClass,
} = Astro.props;
---

<div
  class={`${mostRecentClass} flex container bg-container/40 backdrop-filter backdrop-blur-sm shadow-primary rounded-lg items-center justify-center`}
>
  <a href={href} class="flex w-full h-full justify-center items-center">
    <div class="flex flex-col p-8">
      <h2 class={`pb-8 text-green-500 font-semibold ${titleClass}`}>
        {title}
      </h2>
      {
        thumbnailUrl && (
          <img
            src={thumbnailUrl}
            alt="article thumbnail"
            class="object-cover w-full h-full max-w-lg pb-8 mx-auto"
          />
        )
      }
      <p class={`${descriptionClass} mt-2 mb-0 hover:focus:active:text-black`}>
        {description}
      </p>
    </div>
  </a>
</div>

<style>
  @media (min-width: 1024px) {
    .div1 {
      grid-area: 1 / 1 / 2 / 3;
    }
    .div2 {
      grid-area: 2 / 1 / 3 / 2;
    }
    .div3 {
      grid-area: 2 / 2 / 3 / 3;
    }
  }
</style>
